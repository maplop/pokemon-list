---
import { Image } from "astro:assets";
const imgList = Array.from({ length: 9 }, (_, i) => i + 1);
---

<div id="default-carousel" class="relative w-full" data-carousel="slide">
  <!-- Hero Content Overlay -->
  <div
    class="absolute z-50 top-0 left-0 w-full h-full flex flex-col justify-center items-center text-white text-center px-4 bg-black/40"
  >
    <h1 class="text-3xl md:text-5xl font-bold drop-shadow-lg">
      Explora el mundo Pokémon
    </h1>
    <p class="mt-4 text-lg md:text-xl drop-shadow-md">
      Atrapa a tu favorito entre cientos de criaturas
    </p>
    <a href="/pokemons/1" class="mt-6">
      <button
        class="px-6 py-2 bg-yellow-400 hover:bg-yellow-300 text-black rounded-lg font-semibold shadow-md cursor-pointer"
      >
        Empezar aventura
      </button>
    </a>
  </div>

  <!-- Carousel wrapper -->
  <div class="relative h-[420px] overflow-hidden rounded-lg">
    {
      imgList.map((img) => (
        <div class="duration-700 ease-in-out" data-carousel-item>
          <Image
            src={`/imgs/pokemons/${img}.jpg`}
            class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
            alt={`${img}-img`}
            width={100}
            height={100}
          />
        </div>
      ))
    }
  </div>

  <!-- Slider indicators -->
  <div
    class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse"
  >
    {
      imgList.map((_, index) => (
        <button
          type="button"
          class="w-3 h-3 rounded-full bg-white/60"
          aria-current={index === 0 ? "true" : "false"}
          aria-label={`Slide ${index + 1}`}
          data-carousel-slide-to={index}
        />
      ))
    }
  </div>

  <!-- Slider controls -->
  <button
    type="button"
    class="absolute top-0 start-0 z-50 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
    data-carousel-prev
  >
    <span
      class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 group-hover:bg-white/50"
    >
      ←
    </span>
  </button>
  <button
    type="button"
    class="absolute top-0 end-0 z-50 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
    data-carousel-next
  >
    <span
      class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 group-hover:bg-white/50"
    >
      →
    </span>
  </button>
</div>
