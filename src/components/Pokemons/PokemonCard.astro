---
import type { Pokemon } from "src/interfaces/pokemon";
interface Props {
  pokemon: Pokemon;
}

const { pokemon } = Astro.props;
const id = pokemon.url.split("/").at(-2);
const imgSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
  href=`/pokemons/${pokemon.name}`
  class="flex flex-col justify-center items-center rounded-xl border-2 p-2 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 hover:shadow-white/10"
>
  <img
    class="h-28"
    src={imgSrc}
    alt=`${pokemon.name}-img`
    transition:name={`${pokemon.name}-img`}
  />
  <span class="capitalize">{pokemon.name}</span>
</a>
